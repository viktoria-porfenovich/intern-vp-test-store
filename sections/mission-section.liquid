{{ 'mission-section-style.css' | asset_url | stylesheet_tag }}

<!-- Mission section starts -->
<section id="mission" class="mission section-{{ section.id }}-padding shopify-section section">
  <div class="container page-width">
    <div class="mission-section">
      <div class="mission-header">
        {% if section.settings.section_heading != blank %}
        <h2 class="section-heading h1">{{ section.settings.section_heading }}</h2>
        {% endif %}
      </div>
      <div class="mission-info grid grid--gapless grid--2-col-tablet-down grid--1-col-desktop">
        <div class="mission-image grid__item">
        {% if section.settings.section_image %}
        <img src="{{ section.settings.section_image | img_url: 'large' }}" alt="Section Image">
        {% endif %}
        </div>
        <div class="mission-description grid__item">
        {% if section.settings.section_description != blank %}
        <p>{{ section.settings.section_description }}</p>
        {% endif %}
        </div>
      </div>

      <div class="custom-feature-list custom-feature-list__mission grid grid--2-col-tablet-down">
        {% for block in section.blocks %}
        <div class="feature-item feature-item__mission grid__item" {{ block.shopify_attributes }}>
          {% if block.settings.feature_image %}
          <img src="{{ block.settings.feature_image | img_url: 'medium' }}" alt="{{ block.settings.feature_title }}">
          {% endif %}
          <h3 class="section-heading h2">{{ block.settings.feature_title }}</h3>
          <p>{{ block.settings.feature_subtitle }}</p>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
<!-- Mission section ends -->

{% schema %}
{
  "name": "Mission",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Heading",
      "default": "Mission"
    },
    {
      "type": "image_picker",
      "id": "section_image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "feature_item",
      "name": "Feature Item",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "feature_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "feature_title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "feature_subtitle",
          "label": "Subtitle"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mission Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

